        <servlet-class>com.co.sofcoiso.Servlet.detalleServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ConsultarModalServlet</servlet-name>
        <servlet-class>com.co.sofcoiso.Servlet.ConsultarModalServlet</servlet-class>
