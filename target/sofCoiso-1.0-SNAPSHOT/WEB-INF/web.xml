    <servlet-mapping>
        <servlet-name>PersonaServlet</servlet-name>
        <url-pattern>/PersonaServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CasoServlet</servlet-name>
        <url-pattern>/CasoServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ReportServlet</servlet-name>
