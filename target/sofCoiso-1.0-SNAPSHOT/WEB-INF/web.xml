        <servlet-name>ConsultarModalServlet</servlet-name>
        <url-pattern>/ConsultarModalServlet</url-pattern>
    </servlet-mapping>
     <servlet-mapping>
        <servlet-name>CitasServlet</servlet-name>
        <url-pattern>/CitasServlet</url-pattern>
    </servlet-mapping>
